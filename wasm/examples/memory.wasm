sub mem_init() {
	*.end -> $g
	$g -> *globalbase

	// Initialize first block.
	$g -> $k0
	40 -> $k1               // size = 5w
	$k1 -> [$k0]; $k0 += 8
	$g + 80 -> $k1          // next = end+10w
	$k1 -> [$k0]; $k0 += 8
	0 -> $k1                // free
	$k1 -> [$k0]
	$g -> *heap_end
}
