sub attempt() {
	[$g] -> $s0
	strprint(&msg_bsize); <prd $s0>; <p '\n'>
	$g + 16 -> $s0
	[$s0] -> $s0
	strprint(&msg_free); <prd $t0>; <p '\n'>
	strprint(&msg_rsize); <prd $a1>; <p "\n\n">
	find_free_block()
